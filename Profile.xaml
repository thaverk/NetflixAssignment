<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="Black"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="MyFirstMauiApplication.Profile"
             Title="" 
             >
   

    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Image Source="netflixlogo.png" HeightRequest="85" HorizontalOptions="Center" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="End">
            <Image Source="editicon.png" HeightRequest="85" HorizontalOptions="End" VerticalOptions="End" />
        </HorizontalStackLayout>



        <Label 
            Text="Netflix"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>