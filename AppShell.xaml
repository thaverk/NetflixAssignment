<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyFirstMauiApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyFirstMauiApplication"
    
    Shell.FlyoutBehavior="Disabled"
    Title="MyFirstMauiApplication">


   
        <ShellContent Title="Profile" ContentTemplate="{DataTemplate local:Profile}" Route="Profile" />

        <TabBar>
        <Tab Title="Home" Icon="mortgage.png">
        <ShellContent  Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
            
            <Tab Title="Content" Icon="mortgage.png">
            <ShellContent Title="Content" ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage" />
        </Tab>
</TabBar>
   

</Shell>
